extends layout.pug

block content
	article.grid-container.portfolio-intro
		div

			h1 Welcome to my portfolio
			h2= headingTest

			p.lead.text-light
				| This is a portfolio that showcases the things I've build over the past 6 months @teamtreehouse.
				| Each project builds onto the next project with the things I've learnt next.
				| Hopefully you will see something that intrigues you and inspires you to give me a shout.
				| Am I hired?
	article.grid-container.portfolio-index
    
		.grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

			each project in projects
				- var id = project.id
				.cell
					a(href='/project/' + id) 
						img.thumbnail(src='https://placehold.it/550x550')
						h5= project.name